<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ChartController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextField fx:id="searchBar" onKeyTyped="#search" prefHeight="20.0" prefWidth="611.0" />
    <ListView fx:id="products" fixedCellSize="50.0" prefHeight="200.0" prefWidth="611.0" />
    <TableView fx:id="shoppingCartTable" fixedCellSize="50.0" prefHeight="200.0" prefWidth="713.0">
        <columns>
            <TableColumn fx:id="name" prefWidth="428.0" text="Наименование" />
            <TableColumn fx:id="countOfCheckLine" minWidth="0.0" prefWidth="127.0" text="Количество" />
            <TableColumn fx:id="sum" prefWidth="78.0" text="Итого" />
            <TableColumn fx:id="delete" prefWidth="126.0" />
        </columns>
    </TableView>
</VBox>
